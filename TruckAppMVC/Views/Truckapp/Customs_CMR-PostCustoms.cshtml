<script src="/jquery.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://unpkg.com/webcam-easy@1.0.5/dist/webcam-easy.min.js"></script>

<script>



    $('.takeimg').click(function camerafunc() {

        const picelement = document.getElementById('camerafield');

        const picdiv = document.getElementById('picdiv');

        const webcam = new Webcam(picelement, "user", picdiv);

        $('.camera').addClass('popup');

        webcam.start();

        $('.capture').click(function () {

            var picture = webcam.snap();

            $('#inp').attr("value", picture);

            $('#picdiv').addClass('popup');

            $('.submitbtn').addClass('popup')

            webcam.stop();
        })



        $('.retake').click(function () {

            $('#picdiv').removeClass('popup');

            $('.submitbtn').removeClass('popup')

            webcam.start();
        })

        $('.good').click(function () {
            $('.commentslayer').addClass('popup')
            webcam.stop();

        })

        $('.commentbtn').click(function () {

            $('.camera').removeClass('popup')
            $('.commentslayer').removeClass('popup')
            webcam.stop();

        })

        $('.title>.fa-times').click(function () {

            $('.camera').removeClass('popup')

            webcam.stop();

            window.location.reload(true)

        })


    })




    $('.alert>.splbtn3').click(function () {

        window.location.reload(true)

    })


    $('#file').on('change', function (image) {

        var img = image.target.files[0];
        var reader = new FileReader();

        reader.onloadend = function () {

            $('.camera2').addClass('popup')
            $('#picdiv2').addClass('popup');
            $('.camera2>.submitbtn').addClass('popup');
            $('#picdiv2').html("<img src='" + reader.result + "'></img>");
            $('#inp2').attr("value", reader.result);

        }

        reader.readAsDataURL(img);

        $('.camera2>.title>.fa-times').click(function () {

            $('.camera2').removeClass('popup')

            window.location.reload(true)

        })


        $('.camera2>.submitbtn>.retake').click(function () {

            $('.camera2').removeClass('popup')

            window.location.reload(true)
        })


        $('.camera2>.submitbtn>.good').click(function () {
            $('.commentslayer2').addClass('popup')

        })


    })


    $('a,button,input').click(function () {

        var network = navigator.onLine;

        if (network !== true) {
            $('.alert').addClass('unlockalert')
            $('.alertlayer').addClass('unlockalertlayer')
            $('.alertlayer').removeClass('lockalertlayer')
            $('.alert').removeClass('lockalert')
            $('.alert>.errormsg').html('<h2>Please check your internet connection !"</h2>')
            $('.nav,.camera,.imgbtns').addClass('blur');

            return false;

        }
        else {
            return true;
        }
    })






</script>

